<% include partials/header%>


<div class="events">
	
	<h1 class="whitetext eventheader">
		My Events
	</h1>
	
	<a class="newevent btn btn-light" href="/events/new">Add a new event</a>
	
	<div class="row">
	<% for(i=0 ; i < events.length ; i++){ %>  
	
		<div class="card mb-5 rounded col-sm-6 col-md-3 col-lg-2 col-xl-2 col-12">
			<!--<img src="https://i.ibb.co/QQY8Ngf/erwan-hesry-WPTHZk-A-M4-I-unsplash.jpg" class="card-image-top" alt="erwan-hesry-WPTHZk-A-M4-I-unsplash" border="0"> -->
			<div class="card-header">
					<%= events[i].name%>
				</div>
			<div class="card-body">
				<div class="card-text">
					Start Date: <%= events[i].startdate%>
					<br>
					<a class="darklink" href="/events/<%= events[i]._id %>">Read More</a>
				</div>
			</div>		
		</div>

	<%}%>
		
	</div>
	
</div>
<% include partials/footer%>